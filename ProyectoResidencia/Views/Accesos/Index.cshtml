<div id="accesos" style="margin-top:1.2em">
    <div class="input-group rounded">
        <input type="search" class="form-control rounded" placeholder="Search" aria-label="Search" aria-describedby="search-addon" />
        <span class="input-group-text border-0" id="search-addon">
            <i class="fas fa-search"></i>
        </span>
    </div>
    <br />
    <br />
    <div class="card">
        <div class="card-body">
            <h5 class="card-title" style="color: #00BFFF "><i class="fas fa-car"></i> Acceso de vehiculos </h5>

            <div class="card-text">
                <table class="table">
                    <thead>
                        <tr style="color: #00008B">
                            <th scope="col">#</th>
                            <th scope="col">Matricula</th>
                            <th scope="col">Marca</th>
                            <th scope="col">Modelo</th>
                            <th scope="col">Color</th>
                          


                        </tr>
                    </thead>
                    <tbody>
                        <tr v-for="(user,index) in accesos" :key="index">
                            <td>{{index +1}}</td>
                            <td>{{user.matricula}}</td>
                            <td>{{user.marca}}</td>
                            <td>{{user.modelo}}</td>
                            <td>{{user.color}}</td>
                    

                        </tr>

                    </tbody>
                </table>
            </div>
        </div>
    </div>


    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Acceso de vehiculos</h5>
                    <button type="button" class="btn-close" data-mdb-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col">
                            <div class="form-outline">
                                <input type="text" id="form12" class="form-control" v-model="acceso.matricula" />
                                <label class="form-label" for="form12">Matricula</label>
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="form-outline">
                                <input type="text" id="form12" class="form-control" v-model="acceso.marca" />
                                <label class="form-label" for="form12">Apellido Paterno</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="form-outline">
                                <input type="text" id="form12" class="form-control" />
                                <label class="form-label" for="form12">Modelo</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="form-outline">
                                <input type="text" id="form12" class="form-control" />
                                <label class="form-label" for="form12">Color</label>
                            </div>
                        </div>
                    </div>
                    
                </div>
                <div class="modal-footer">

                    <button type="button" class="btn btn-primary" v-on:click="saveUser">Guardar</button>
                </div>
            </div>
        </div>
    </div>



</div>




<div id="areas" style="margin-top: 1.2em">
  <div class="input-group rounded">
    <input
      type="search"
      class="form-control rounded"
      placeholder="Search"
      aria-label="Search"
      aria-describedby="search-addon"
    />
    <span class="input-group-text border-0" id="search-addon">
      <i class="fas fa-search"></i>
    </span>
  </div>
  <br />
  <br />
  <div class="card">
    <div class="card-body">
      <h5 class="card-title" style="color: #00bfff">
        <i class="fas fa-fas fa-cocktail"></i> Areas Sociales
      </h5>

      <div class="card-text">
        <table class="table">
          <thead>
            <tr style="color: #00008b">
              <th scope="col">#</th>
              <th scope="col">Clave</th>
              <th scope="col">Nombre</th>
              <th scope="col">Tipo</th>
              <th scope="col"></th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
            <tr v-for="(user,index) in areas" :key="index">
              <td>{{ idArea }}</td>
              <td>{{ user.clave }}</td>
              <td>{{ user.nombre }}</td>
              <td>{{ user.tipo }}</td>
              <td>
                <div class="btn bg-info" v-on:click="deleteUser(user.idArea)">
                  <i class="fas fa-trash"></i>
                </div>
              </td>
              <td>
                <div class="btn bg-info" v-on:click="">
                  <i class="fas fa-edit"></i>
                </div>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div
    class="modal fade"
    id="exampleModal"
    tabindex="-1"
    aria-labelledby="exampleModalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Agregar Evento</h5>
          <button
            type="button"
            class="btn-close"
            data-mdb-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body">
          
            <div class="row">
                <select class="form-select" aria-label="Default select example">
                    <option selected>Open this select menu</option>
                    <option value="1">One</option>
                    <option value="2">Two</option>
                    <option value="3">Three</option>
                  </select>
            </div>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-primary" v-on:click="saveUser">
            Guardar
          </button>
        </div>
      </div>
    </div>
  </div>

  <button
    type="button"
    class="btn btn-primary btn-floating fab"
    data-mdb-toggle="modal"
    data-mdb-target="#exampleModal"
  >
    <i class="fas fa-add"></i>
  </button>
  <br />
  <br />
</div>

@section Scripts{

<script>
  Vue.createApp({
    data() {
      return {
        message: "Hello Vue!",
        areas: [],
        area: { clave: "", nombre: "", tipo: "" },
      };
    },
    created() {
      this.getSocialAreas();
    },
    methods: {
      saveUser() {
        console.log(this.area);
        axios
          .post("/Api/SocialAreas", this.area)
          .then((res) => {
            console.log(res);
            this.getAreas();
          })
          .catch((error) => console.error(error));
      },
      getSocialAreas() {
        axios
          .get("/Api/SocialAreas")
          .then((res) => {
            console.log(res);
            this.areas = res.data;
          })
          .catch((error) => console.error(error));
      },
      deleteUser(id) {
        axios
          .delete("/Api/SocialAreas/" + id)
          .then((res) => {
            console.log(res);
            this.getSocialAreas();
          })
          .catch((error) => console.error(error));
      },
    },
  }).mount("#areas");
</script>
}
